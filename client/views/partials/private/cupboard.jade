h3 Add a stock item

.row
    form.ingredient-add-form(name="myForm" 
        ng-controller="cupboardController"
        ng-submit="createIngredient()"
        )
        .col-md-2
            h5 SKU
            input.form-control(name="input" 
                placeholder="SKU"
                ng-model="formData.sku" required)
        .col-md-2
            h5 Name
            input.form-control(name="input" 
                placeholder="Name"
                ng-model="formData.productName")
        .col-md-2
            h5 Price
            input.form-control(name="input" 
                placeholder="Price"
                ng-model="formData.price")
        .col-md-2
            h5 Stock
            input.form-control(name="input" 
                placeholder="Inventory"
                value="formData.inventory"
                ng-model="formData.inventory")
        .col-md-2
            h5 
                i.fa.fa-tag
                span &nbsp;Sets
            select.moss.span-2
                option(ng-repeat="set in sets")  {{set.name}}
        .col-md-2
            input.form-control.btn.moss-btn(type="submit" id="submitnew" value="Create")

