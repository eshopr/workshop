h3 Manage your existing stock

.hay
    Currently Viewed Item
    pre.water
        {{item}}
        .fly(ng-repeat="it in item")
            {{it.name}}
.item.row 
    .col-md-1
        span.item-span-heading
            i.fa.fa-search
    .col-md-1
        span.item-span-heading
            i.fa.fa-hdd-o
    .col-md-1
        span.item-span-heading SKU
    .col-md-2 
        span.item-span-heading Name
    .col-md-1
        span.item-span-heading Price 
    .col-md-1
        span.item-span-heading Units
    .col-md-2
        span.item-span-heading 
            i.fa.fa-tag
            &nbsp;Set
    .col-md-1
        i.fa.fa-eraser

.item.row(ng-repeat="ingredient in ingredients")
    .col-md-1
        span.item-span
            a(href="#" 
                data-ng-click="showIngredient(ingredient._id)" ) view 
    .col-md-1
        span.item-span
            a(href="#" 
                ng-hide="editThisIngredient == ingredient._id"
                data-ng-click="switchToEdit(ingredient._id)" ) edit 
            a(href="#" 
                ng-show="editThisIngredient == ingredient._id"
                data-ng-click="discardEdit(ingredient._id)" ) discard
    .col-md-1
        span.item-span(ng-hide="editThisIngredient == ingredient._id") 
            {{ingredient.sku}}
        span.item-span(ng-show="editThisIngredient == ingredient._id") 
            input.form-control(value="{{ingredient.sku}}")
    .col-md-2

        span.item-span(ng-hide="editThisIngredient == ingredient._id") 
            {{ingredient.productName}}
        span.item-span(ng-show="editThisIngredient == ingredient._id") 
            input.form-control(value="{{ingredient.productName}}")
    .col-md-1
        span.item-span(ng-hide="editThisIngredient == ingredient._id") 
            {{ingredient.price}}
        span.item-span(ng-show="editThisIngredient == ingredient._id") 
            input.form-control(value="{{ingredient.price}}")
    .col-md-1
        span.item-span(ng-hide="editThisIngredient == ingredient._id") 
            {{ingredient.inventory}}
        span.item-span(ng-show="editThisIngredient == ingredient._id") 
            input.form-control(value="{{ingredient.inventory}}")
    .col-md-2
        span.item-span(ng-hide="editThisIngredient == ingredient.set") 
            {{ingredient.set}}
        span.item-span(ng-show="editThisIngredient == ingredient.set") 
            input.form-control(value="{{ingredient.set}}")
    .col-md-1
        a(href='#' 
            ng-hide="editThisIngredient == ingredient._id"
            ng-click="deleteIngredient(ingredient._id)") delete
        a(href='#' 
            ng-show="editThisIngredient == ingredient._id"
            ng-click="saveIngredient(ingredient._id)") save
